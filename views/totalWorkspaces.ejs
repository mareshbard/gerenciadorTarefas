<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="style.css">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <header>

    </header>
    <main>
        <section class="tasks">
         <h2>Meus Workspaces</h2>
         <%if (listWorkspaces.length > 0) { %>
        <% listWorkspaces.forEach( ws =>{ %>
            <div class="workspace">
                <h3><%= ws.workspaceName %></h3>
                <p><%= ws.description %></p>
                <p>Membros: <%=ws.members.length %></p>
                <a class="btn btn-dark" href="/workspace/<%= ws._id%>">Entrar</a>
            </div> <br><br>
       <% }) %>
            <% } else {%>
            <p>Sem workspaces</p>
            <% } %>
        </section>
    </main>
    <footer>

    </footer>
</body>
</html>